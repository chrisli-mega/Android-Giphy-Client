<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.view.TestTranslateActivity"
    tools:showIn="@layout/activity_test_translate">

    <EditText
        android:id="@+id/editTextTranslated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="the word to be translated"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextWeired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Weiredness"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/editTextTranslated"
        app:layout_constraintStart_toStartOf="@+id/editTextTranslated"
        app:layout_constraintTop_toBottomOf="@+id/editTextTranslated" />

    <Button
        android:id="@+id/buttonTestTranslate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/editTextWeired"
        app:layout_constraintStart_toStartOf="@+id/editTextWeired"
        app:layout_constraintTop_toBottomOf="@+id/editTextWeired" />

    <ImageView
        android:id="@+id/imageViewTestTranslate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonTestTranslate"
        tools:srcCompat="@tools:sample/avatars" />

</android.support.constraint.ConstraintLayout>