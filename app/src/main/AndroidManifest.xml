<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gregpearce.gifhub">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".app.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.view.TestRandomActivity"
            android:label="@string/title_activity_test_random"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ui.view.TestTranslateActivity"
            android:label="@string/title_activity_test_translate"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.view.TestGetGifByIDActivity"
            android:label="@string/title_activity_test_get_gif_by_id"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.view.StartActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.view.MainActivity" />
        <activity android:name=".ui.view.GifDetailActivity" />
    </application>

</manifest>